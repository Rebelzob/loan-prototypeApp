<%= form_with(model: [user, loan], local: true, class: "space-y-6") do |form| %>
  <% if loan.errors.any? %>
    <div id="error_explanation" class="p-4 mb-4 text-red-700 bg-red-100 rounded-lg">
      <h2 class="mb-2 text-lg font-semibold"><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul class="list-disc list-inside">
        <% loan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Select User", class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :amount, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :amount, step: 0.01, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :interest_rate, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :interest_rate, step: 0.01, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :term, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :term, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :status, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.text_field :status, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :total_amount_to_pay, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :total_amount_to_pay, step: 0.01, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :amount_paid, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :amount_paid, step: 0.01, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :pending_installments, class: "block mb-2 text-sm font-medium text-gray-700" %>
    <%= form.number_field :pending_installments, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="actions">
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>