<div class="max-w-3xl p-6 mx-auto">
  <% if notice.present? %>
    <div class="p-4 mb-6 text-green-600 rounded-lg bg-green-50">
      <%= notice %>
    </div>
  <% end %>

  <%= render @user %>

  <h2 class="mb-4 text-2xl font-semibold">Loans</h2>
  <%= link_to "Add Loan", new_user_loan_path(@user), class: "btn btn-primary mb-4" %>

  <%= render partial: 'loan_table', locals: { user: @user } %>

  <div class="flex items-center justify-between mt-6">
    <div class="space-x-4">
      <%= link_to "Edit", edit_user_path(@user), 
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "Back", users_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
    </div>
    
    <%= button_to "Delete", user_path(@user),
    method: :delete,
    data: { turbo: false, confirm: "Â¿EstÃ¡ seguro que desea eliminar este cliente?" },
    class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
  </div>
</div>