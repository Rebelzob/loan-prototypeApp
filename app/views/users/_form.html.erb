<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <ul class="space-y-4">
      <li>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
      </li>
      <li>
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :last_name, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
      </li>
      <li>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: false %>
        <small class="text-gray-500">Optional</small>
      </li>
      <li>
        <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
        <%= form.telephone_field :phone, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
      </li>
      <li>
        <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :address, rows: 3, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: true %>
      </li>
      <li>
        <%= form.label :comments, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :comments, rows: 3, class: "mt-1 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", required: false %>
        <small class="text-gray-500">Optional</small>
      </li>
    </ul>
    <%= form.submit "Submit", class: "mt-4 w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
